<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#A9A9A9"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#C0C0C0	"
        android:orientation="vertical"
        android:padding="16dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!--ПРЕДМЕТ-->
        <EditText
            android:id="@+id/lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Предмет"
            android:inputType="text"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="20sp"
            android:backgroundTint="@color/design_default_color_primary" />

        <!--ТЕКСТ ВОПРОСА-->
        <EditText
            android:id="@+id/quest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Текст вопроса"
            android:inputType="text"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="20sp"
            android:backgroundTint="@color/design_default_color_primary" />

        <!--ПРАВИЛЬНЫЙ ОТВЕТ-->
        <EditText
            android:id="@+id/corrAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Правильный ответ"
            android:inputType="text"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="20sp"
            android:backgroundTint="@color/design_default_color_primary" />

        <!--НЕПРАВИЛЬНЫЙ ОТВЕТ-->
        <EditText
            android:id="@+id/incor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Неправильный ответ"
            android:inputType="text"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="20sp"
            android:backgroundTint="@color/design_default_color_primary" />

        <!--НЕПРАВИЛЬНЫЙ ОТВЕТ-->
        <EditText
            android:id="@+id/incor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Неправильный ответ"
            android:inputType="text"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="20sp"
            android:backgroundTint="@color/design_default_color_primary" />

        <!--НЕПРАВИЛЬНЫЙ ОТВЕТ-->
        <EditText
            android:id="@+id/incor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Неправильный ответ"
            android:inputType="text"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="20sp"
            android:backgroundTint="@color/design_default_color_primary" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
